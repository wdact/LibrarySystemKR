<Page x:Class="LibraryClientKR.View.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryClientKR.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookPage"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Orientation="Vertical" Margin="0 0 0 10">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                <TextBox x:Name="SearchBox" Width="200" Margin="0 10 10 0"/>
                <Button Content="Поиск" Click="Search_Click" Margin="0 10 10 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <ComboBox x:Name="LibrarySelector" Width="150" DisplayMemberPath="Name" SelectedValuePath="LibraryId" Margin="0 10 10 0" />
                <ComboBox x:Name="SubjectSelector" Width="150" DisplayMemberPath="Name" SelectedValuePath="SubjectId" Margin="0 10 10 0" />
                <Button Content="Добавить книгу" Click="AddBook_Click" Margin="0 10 10 0"/>
                <Button Content="Удалить выбранную" Click="DeleteBook_Click" Margin="0 10 10 0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Фильтр:" VerticalAlignment="Center" Margin="0 0 10 0"/>

            <ComboBox x:Name="FilterLibraryComboBox"
                      Width="150"
                      DisplayMemberPath="Name"
                      SelectedValuePath="LibraryId"
                      Margin="0 0 10 0"/>

            <ComboBox x:Name="FilterSubjectComboBox"
                      Width="150"
                      DisplayMemberPath="Name"
                      SelectedValuePath="SubjectId"
                      Margin="0 0 10 0"/>

            <Button Content="Применить фильтр" Click="ApplyFilter_Click" Margin="0 10 10 0"/>
            <Button Content="Сбросить" Click="ClearFilter_Click"/>
        </StackPanel>


        <!-- Список книг -->
        <DataGrid x:Name="BookGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  CanUserSortColumns="True"
                  SelectionMode="Single"
                  Margin="0 0 0 10"
                  Sorting="BookGrid_Sorting">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookId}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="150"/>
                <DataGridTextColumn Header="Издательство" Binding="{Binding Publisher}" Width="150"/>
                <DataGridTextColumn Header="Город" Binding="{Binding PlaceOfPublication}" Width="100"/>
                <DataGridTextColumn Header="Год" Binding="{Binding YearOfPublication}" Width="80"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60"/>

                <!-- Библиотека -->
                <DataGridComboBoxColumn Header="Библиотека"
                                        SelectedValueBinding="{Binding LibraryId}"
                                        SelectedValuePath="LibraryId"
                                        DisplayMemberPath="Name"
                                        Width="150">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding DataContext.Libraries, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding DataContext.Libraries, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <!-- Тематика -->
                <DataGridComboBoxColumn Header="Тематика"
                                        SelectedValueBinding="{Binding SubjectId}"
                                        SelectedValuePath="SubjectId"
                                        DisplayMemberPath="Name"
                                        Width="150">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding DataContext.Subjects, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource"
                                    Value="{Binding DataContext.Subjects, RelativeSource={RelativeSource AncestorType=Page}}"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!-- Сохранение изменений -->
        <Button Grid.Row="3" Content="Сохранить изменения" HorizontalAlignment="Right" Click="SaveChanges_Click"/>
    </Grid>
</Page>
